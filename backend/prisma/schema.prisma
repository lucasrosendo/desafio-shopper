generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  driver_id   Int      @id
  name        String
  description String
  comment     String
  car         String
  rating      Int
  rate        Float
  minKm       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Rides       Rides[]
}

model Rides {
  ride_id     Int      @id @default(autoincrement())
  driver_id   Int
  customer_id String
  origin      String
  destination String
  distance    Int
  duration    String
  value       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Driver Driver @relation(fields: [driver_id], references: [driver_id])
}
