generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Driver {
  id          String   @id @default(cuid())
  name        String
  description String
  car         String
  rating      Int
  rate        Int
  minKm       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  Rides       Rides[]
}

model Rides {
  id          String   @id @default(cuid())
  driverId    String
  customer_id String
  origin      String
  destination String
  distance    Int
  duration    Int
  value       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  Driver Driver @relation(fields: [driverId], references: [id])
}
